<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TambahProdukPage"
    android:background="#E5E5E5">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="18dp"
                android:layout_height="25dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="38dp"
                app:srcCompat="@drawable/back"
                android:background="#E5E5E5"/>
            <TextView
                android:id="@+id/tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="35dp"
                android:text="Tambah Produk"
                android:fontFamily="@font/montseraat_medium"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/unggah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tambah"
                android:layout_marginTop="91dp"
                android:text="Unggah Foto"
                android:layout_centerHorizontal="true"
                android:textColor="#424242"
                android:fontFamily="@font/montseraat_medium"
                android:textStyle="bold"
                android:textSize="18dp"/>
            <TextView
                android:id="@+id/nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="61dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/unggah"
                android:text="Nama Produk"
                android:textSize="18dp"
                android:textColor="#424242"/>
            <EditText
                android:id="@+id/edit1"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_below="@+id/nama"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="347dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="391dp"
                android:background="@drawable/edittext"
                android:hint="Masukan Nama Produk"
                android:textSize="13dp"
                android:paddingLeft="21dp"/>
            <TextView
                android:id="@+id/harga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit1"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="23dp"
                android:text="Harga"
                android:fontFamily="@font/montseraat_medium"
                android:textSize="18dp"
                android:textColor="#424242"/>
            <EditText
                android:id="@+id/edit2"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_below="@+id/harga"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="347dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="391dp"
                android:background="@drawable/edittext"
                android:hint="Masukan Harga Produk"
                android:textSize="13dp"
                android:paddingLeft="21dp"/>
            <TextView
                android:id="@+id/deskripsi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit2"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="23dp"
                android:text="Deskripsi"
                android:fontFamily="@font/montseraat_medium"
                android:textSize="18dp"
                android:textColor="#424242"/>
            <EditText
                android:id="@+id/edit3"
                android:layout_width="wrap_content"
                android:layout_height="94dp"
                android:layout_below="@+id/deskripsi"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="347dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="391dp"
                android:background="@drawable/edittext"
                android:hint="Masukan Deskripsi"
                android:textSize="13dp"
                android:paddingLeft="21dp"/>
            <TextView
                android:id="@+id/toping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit3"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="39dp"
                android:text="Pilihan Toping"
                android:fontFamily="@font/montseraat_medium"
                android:textSize="18dp"
                android:textColor="#424242"/>
            <TextView
                android:id="@+id/namaToping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="41dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/toping"
                android:text="Nama"
                android:textSize="18dp"
                android:textColor="#424242"/>
            <EditText
                android:id="@+id/edit4"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_below="@+id/namaToping"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="347dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="391dp"
                android:background="@drawable/edittext"
                android:hint="Masukan Nama Toping"
                android:textSize="13dp"
                android:paddingLeft="21dp"/>
            <TextView
                android:id="@+id/harga2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/edit4"
                android:text="Harga"
                android:textSize="18dp"
                android:textColor="#424242"/>
            <EditText
                android:id="@+id/edit5"
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:layout_below="@+id/harga2"
                android:layout_marginTop="10dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="25dp"
                android:layout_marginLeft="347dp"
                android:layout_marginEnd="44dp"
                android:layout_marginRight="391dp"
                android:background="@drawable/edittext"
                android:hint="Masukan Harga Toping"
                android:textSize="13dp"
                android:paddingLeft="21dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:layout_below="@id/edit5"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="34dp"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="34dp"
                android:layout_marginRight="323dp"
                android:layout_marginBottom="45dp"
                android:background="@drawable/button"
                android:text="Simpan"
                android:textAllCaps="false"
                android:fontFamily="@font/montseraat_medium"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </RelativeLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_navigation"
        app:itemBackground="@color/white"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
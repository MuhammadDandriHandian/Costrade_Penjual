<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NextTopUpPage"
    android:background="#E5E5E5">

    <ImageButton
        android:id="@+id/imageButtonKembaliNextTopUp"
        android:layout_width="18dp"
        android:layout_height="25dp"
        android:layout_marginTop="41dp"
        android:layout_marginLeft="38dp"
        app:srcCompat="@drawable/back"
        android:background="#E5E5E5"/>
    <TextView
        android:id="@+id/textIsiSaldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/montseraat_medium"
        android:text="Isi Saldo Akun"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/totalbayar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textIsiSaldo"
        android:layout_centerHorizontal="true"
        android:text="Total Pembayaran"
        android:textSize="18dp"
        android:textStyle="bold"
        android:fontFamily="@font/montseraat_medium"
        android:textColor="#424242"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:layout_marginLeft="38dp"
        android:layout_below="@+id/totalbayar"
        android:text="Pilih Metode Pembayaran"
        android:textSize="18dp"
        android:textColor="#424242"
        android:fontFamily="@font/montseraat_medium"
        android:textStyle="bold"/>

</RelativeLayout>